<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout13"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/call_background">

    <LinearLayout
        android:id="@+id/linearLayout25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:id="@+id/linearLayout26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/icNotificationImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/buzz_logo"
                />
            <TextView
                android:id="@+id/icNotificationUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/icNotificationCallOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="visible"
            android:paddingTop="32dp"
            >

            <LinearLayout
                android:id="@+id/icNotificationReject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnReject"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:elevation="3dp"
                    android:scaleType="centerInside"
                    android:tint="@color/white"
                    android:tintMode="src_in"
                    android:src="@drawable/ic_phone_off" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/icNotificationAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/btnAnswer"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:elevation="3dp"
                    android:scaleType="centerInside"
                    android:tint="@color/white"
                    android:tintMode="src_in"
                    android:src="@drawable/ic_phone_call" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>